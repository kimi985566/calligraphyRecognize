<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fab_menu_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:visibility="gone">

    <LinearLayout
        android:id="@+id/ll01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="140dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/miniFab_style"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingBottom="5dp"
            android:text="书法风格识别"
            android:textColor="@android:color/white"
            android:textSize="15sp"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/miniFab_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="12dp"
            android:paddingBottom="8dp"
            android:src="@drawable/ic_camera"
            app:backgroundTint="@color/color_tab_2"
            app:borderWidth="0dp"
            app:elevation="4dp"
            app:fabSize="normal"
            app:useCompatPadding="true"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll01"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/miniFab_ocr"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingBottom="4dp"
            android:text="文字识别"
            android:textColor="@android:color/white"
            android:textSize="15sp"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/miniFab_ocr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="12dp"
            android:src="@drawable/ic_fab_ocr"
            app:backgroundTint="@color/color_tab_3"
            app:borderWidth="0dp"
            app:elevation="4dp"
            app:fabSize="normal"
            app:useCompatPadding="true"/>
    </LinearLayout>

</RelativeLayout>